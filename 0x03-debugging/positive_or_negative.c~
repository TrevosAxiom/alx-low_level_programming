#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include "main.h"
/**
 * positive_or_negative - Program begins here
 * Return: This code returns 0
 * @i: What's this stress
 * stdlib.h was included
 */
void positive_or_negative(int i)
{
int i;

srand(time(0));
i = rand() - RAND_MAX / 2;
if (i < 0)
printf("%d is negative\n", i);
else if (i > 0)
printf("%d is positive\n", i);
else
printf("%i is zero\n", i);
return (0);
}
